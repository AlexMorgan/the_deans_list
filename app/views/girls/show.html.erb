<%= content_for :home do %>
  <div class="wallpaper">

  </div>
<% end %>
<div class="row girl-profile">
  <div class="col-md-4">
    <%= image_tag @girl.image.url, class: "profile-pic" %>
  </div>
  <div class="col-md-8">
    <h1 class="white med"><%= @girl.first_name %> <%= @girl.last_name %></h1>
    <h3 class="white thin"><%= @girl.year %></h3>
    <h3><%= @girl.major %></h3>
    <h4><a href="<%= @girl.charity_url %>"  target="_blank"><%= @girl.charity %></a></h4>
    <% if @girl.paypal_id.present? %>
      <div>
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="<%= @girl.paypal_id %>">
        <input type="submit" class="btn-custom" value="Donate" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
        </form>
      </div>
    <% end %>
    <h4><%= @girl.bio %></h4>
  </div>
</div>
