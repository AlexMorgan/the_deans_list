<% if @location.errors.any? %>
  <p> There were errors in your submission </p>
  <ul>
    <% @location.errors.each do |key, val| %>
      <li><%= key.capitalize %> <%= val %></li>
    <% end %>
  </ul>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <%= form_for @location do |f| %>
    <div><%= f.text_field :name, autofocus: true, placeholder: "Name of Company", class: "girls-input" %></div>
    <div><%= f.text_field :address, placeholder: "Address", class: "girls-input" %></div>
    <div><%= f.submit "Submit", class: "btn submit-btn" %></div>
  <% end %>
</div>
