  <script type="text/javascript">
    $(document).ready(function(){
      $('.video-section').css('height', screen.height*.87);
      $('.video-content').css('padding-top', screen.height/3.5);
      $('.arrow-section').css('margin-top', screen.height*.30);
      $('#about').css('padding-top', screen.height/4);
      $('#about').css('padding-bottom', screen.height/3);

      $('a[href^="#"]').click(function (e) {
          e.preventDefault();

          var target = this.hash,
          $target = $(target);

          $('html, body').stop().animate({
              'scrollTop': $target.offset().top
          }, 750, 'swing', function () {
              window.location.hash = target;
          });
      });
    });
  </script>
